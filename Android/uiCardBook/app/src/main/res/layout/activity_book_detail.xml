<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".book_detail">

    <ImageView
        android:id="@+id/img_book_detail"
        android:layout_width="120dp"
        android:layout_height="190dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/title_book_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Title "
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_book_detail"
        app:layout_constraintStart_toStartOf="@+id/img_book_detail"
        app:layout_constraintTop_toBottomOf="@+id/img_book_detail" />

    <TextView
        android:id="@+id/category_book_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#D3D1D1"
        android:text="Category"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/title_book_detail"
        app:layout_constraintStart_toStartOf="@+id/title_book_detail"
        app:layout_constraintTop_toBottomOf="@+id/title_book_detail" />

    <TextView
        android:id="@+id/des_book_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_book_detail" />
</androidx.constraintlayout.widget.ConstraintLayout>